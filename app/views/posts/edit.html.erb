<h1> Edit post </h1>

<%= form_for :post, url: post_path(@post), method: :patch do |f| %> <!--  url: posts_path is going to submit the form to the path 'create' -->
	<% if @post.errors.any?  %>
		<% @post.errors.full_messages.each do |msg| %>
			<div class="alert alert-danger"><%= msg %></div>
		<% end  %>
	<% end  %>

	<p>
		<%= f.label :title %>
		<%= f.text_field(:title, {:class => 'form-control'}) %>
	</p>

	<p>
		<%= f.label :body %>
		<%= f.text_area(:body, {:class => 'form-control'})  %>
	</p>

	<p>
		<%= f.submit({:class => 'btn btn-primary'}) %>
	</p>
	
<% end %>